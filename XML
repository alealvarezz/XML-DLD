<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE  html [
<!ELEMENT html ( head, body ) >

<!ELEMENT head ( title ) >
<!ELEMENT title ( #PCDATA ) >

<!ELEMENT body ( h1 | p | h2 | ol | li | a | img | h4 | h3 | ul | strong | br | hr )* >
<!ELEMENT h1 ( #PCDATA | img | a )* >
<!ELEMENT h2 ( #PCDATA | a | img )* >
<!ELEMENT h3 ( #PCDATA | a | img )* >
<!ELEMENT h4 ( #PCDATA | a | img )* >
<!ELEMENT br ( #PCDATA ) >
<!ELEMENT hr ( #PCDATA ) >
<!ELEMENT p ( #PCDATA | a | img | hr | br | strong |ol | ul | li )* >
<!ELEMENT ul ( #PCDATA | li )* >
<!ELEMENT ol ( #PCDATA | li )* >
<!ELEMENT li ( #PCDATA | a | img )* >
<!ELEMENT a ( #PCDATA ) >
<!ATTLIST a href CDATA #REQUIRED >
<!ELEMENT img ( #PCDATA ) >
<!ATTLIST img src CDATA #REQUIRED 
              alt CDATA #IMPLIED 
              width CDATA #IMPLIED 
              height CDATA #IMPLIED >
              
<!ELEMENT strong ( #PCDATA ) >
]>

